---
import {
  getAllPosts,
  getDatabase,
} from '../lib/notion/client.ts'
import Layout from '../layouts/Layout.astro'
import { getPostLink, getDateStr } from '../lib/blog-helpers.ts'
import styles from '../styles/blog.module.css'

const [posts, database] = await Promise.all([
  getAllPosts(),
  getDatabase(),
])

// Filter out the about post
const filteredPosts = posts.filter(post => post.Slug !== 'about')
---

<Layout title="Blog Arşivi" description="Tüm yazıların listesi">
  <div slot="main" class={styles.main}>
    <header class="archive-header">
      <h1>Blog Arşivi</h1>
      <p>{filteredPosts.length} yazı</p>
    </header>

    <div class="archive-list">
      {filteredPosts.map((post) => (
        <article class="archive-item">
          <a href={getPostLink(post.Slug)} class="archive-link">
            <h2>{post.Title}</h2>
            <time>{getDateStr(post.Date)}</time>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .archive-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .archive-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .archive-header p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  .archive-list {
    max-width: none;
  }

  .archive-item {
    margin-bottom: 1rem;
    border-bottom: 1px solid #f0f0f0;
    padding-bottom: 1rem;
  }

  .archive-item:last-child {
    border-bottom: none;
  }

  .archive-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-decoration: none;
    color: inherit;
    padding: 0.5rem;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }

  .archive-link:hover {
    background-color: #f8f9fa;
  }

  .archive-link h2 {
    font-size: 1rem;
    font-weight: 400;
    margin: 0;
    color: #333;
    flex: 1;
  }

  .archive-link:hover h2 {
    color: #007acc;
  }

  .archive-link time {
    font-size: 0.85rem;
    color: #666;
    margin-left: 1rem;
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .archive-link {
      flex-direction: column;
      align-items: flex-start;
    }

    .archive-link time {
      margin-left: 0;
      margin-top: 0.25rem;
    }
  }
</style>